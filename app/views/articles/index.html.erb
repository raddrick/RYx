<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= link_to new_article_path, class: 'btn btn-primary pull-right' do %>
        <i class="fa fa-plus-circle"></i> New Article
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
    <% @articles.each do |article| %>
      <%# article.published %>
      <%# article.publish_by %>
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
          <div class="row">
            <div class="col-xs-12 clear-fix"><h1><%= article.title %></h1></div>
            <div class="separator-2 visible-lg col-xs-12"></div>
            <div class="col-xs-12">
              [
              <%= link_to article, class: 'btn btn-white btn-sm' do %><i class="fa fa-file"></i> Show<% end %>
              <%= link_to edit_article_path(article), class: 'btn btn-white btn-sm' do %><i class="fa fa-pencil"></i> Edit<% end %>
              <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-white btn-sm' do %><i class="fa fa-trash"></i> Delete<% end %> ]<br>
              Author: <small><%= article.author.name %></small><br>
              <%= markdown.render(article.body).html_safe %>
            </div>
            <div class="separator-2 visible-lg col-xs-12"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">&nbsp;</div>
        </div>
    <% end %>
    </div>
  </div>
</div>
