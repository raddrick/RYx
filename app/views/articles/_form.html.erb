<div class="container">
  <div class="row">
    <%= form_for(@article, html: {class: 'form-horizontal'}) do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
          <ul>
          <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, class: 'form-label col-xs-2' %>
          <div class="col-xs-10">
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
          </div>
      </div>
      <div class="form-group">
        <%= f.text_field :stub, class: 'form-control', placeholder: 'Stub', disabled: true %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, class: 'form-control', placeholder: 'Body', rows: 20 %>
        <small class="pull-right"><a href="https://caleorourke.gitbooks.io/redcarpet-syntax/content/cheatsheet/index.html" target="_blank">Markdown Cheatsheet</a></small>
      </div>
      <div class="form-group">
        <%= f.label :landing_id, class: 'form-label col-xs-2 col-sm-2' %>
        <div class="col-xs-4 col-sm-4">
          <%= f.select :landing_id, [1,1], {:include_blank => "Select"}, {class: 'form-control'} %>
        </div>
        <%= f.label :author_id, class: 'form-label col-xs-2 col-sm-2' %>
        <div class="col-xs-4 col-sm-4">
          <%= f.select :author_id, [1,1], {:include_blank => "Select"}, {class: 'form-control col-xs-4 col-sm-4'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :publish_by, class: 'form-label col-xs-2 col-xs-offset-6' %>
        <div class="col-xs-4">
          <%= f.text_field :publish_by, :class => 'form-control', type: 'datetime-local' %>
        </div>
      </div>
      <div class="actions pull-right">
        <%= f.label :published, class: 'form-label' %>
        <%= f.check_box :published %> &nbsp;
        <%= f.submit class: 'btn btn-primary' %> |
        <%= link_to "Show", "#{article_url @article}#myModal-#{@article.id}", {remote: true, 'data-toggle' =>
        'modal', class: 'btn btn-default'} unless @article.id.blank? %>
        <%= link_to 'Back', articles_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
<div class="modal fade" id="myModal-<%= @article.id %>" tabindex="-1" role="document" aria-labelledby="myModalLabel">

</div>
