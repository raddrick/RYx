<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>RYx Speaker Series</h1>
    </div>
    <% @talks.each do |talk| %>
      <div class="col-xs-6 col-md-4 col-lg-2">
      <%= link_to talk do %>
        <img src="https://i.ytimg.com/vi/<%= talk.video %>/hqdefault.jpg" alt="<%= talk.description %>">
        <%= talk.speaker.name %><br>
        <strong><%= talk.title %></strong>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
